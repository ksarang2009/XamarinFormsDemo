<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinFormsDemo"
             x:Class="XamarinFormsDemo.MainPage">

    <StackLayout Padding="10">
        <Label Text="Parameter 1"></Label>
        <Entry x:Name="txtParam1" Keyboard="Numeric" AutomationId="txtParam1" Placeholder="Enter Parameter 1"></Entry>

        <Label Text="Parameter 2"></Label>
        <Entry x:Name="txtParam2" Keyboard="Numeric" AutomationId="txtParam2" Placeholder="Enter Parameter 2"></Entry>

        <Label Text="Result"></Label>
        <Entry x:Name="txtResult" AutomationId="txtResult" TextColor="Black" FontSize="Medium" IsEnabled="False" Placeholder="Result goes here"></Entry>

        <Button x:Name="btnCalculate" Text="Calculate" AutomationId="btnCalculate"></Button>
    </StackLayout>

</ContentPage>